<Window x:Class="Wpf_OnlineRestaurantSystem.Views.InventoryManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manage Inventory"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search and Filter -->
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox Width="200" Margin="0,0,10,0"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     />
        </StackPanel>

        <!-- Dishes List -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Dishes}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectedItem="{Binding SelectedDish}"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Current Stock" Binding="{Binding CurrentQuantity}" Width="0.5*"/>
                <DataGridTemplateColumn Header="Add Quantity" Width="0.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding QuantityToAdd, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="2" Padding="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Update Stock"
                    Command="{Binding UpdateStockCommand}"
                    Width="120" Height="30" Margin="0,0,10,0"/>
            <Button Content="Close"
                    Command="{Binding CloseCommand}"
                    Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>