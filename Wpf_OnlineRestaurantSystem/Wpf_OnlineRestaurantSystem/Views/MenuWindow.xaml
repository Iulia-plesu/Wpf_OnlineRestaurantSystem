<Window x:Class="Wpf_OnlineRestaurantSystem.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_OnlineRestaurantSystem.Converters"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MenuWindow" Height="500" Width="900">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Categories -->
        <ComboBox 
            Grid.Column="0"
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
            DisplayMemberPath="Name"
            Margin="10,10,10,406" />

        <!-- Menu Items in Selected Category -->
        <ListBox Grid.Column="1"
                 ItemsSource="{Binding MenuItems}" 
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 DisplayMemberPath="Name"
                 Margin="10"/>

        <!-- Right Column with Scrollable Details and Button -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Scrollable Selected Item Details -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding SelectedItem}"
                            Visibility="{Binding ShowOrderButtons, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button Content="Logout"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top" 
                            Width="80" Height="30"
                            Margin="0,0,10,0"
                            Click="Logout_Click"
                            Visibility="{Binding ShowOrderButtons, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <TextBlock Text="Detalii:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Allergens}" TextWrapping="Wrap"/>

                    <TextBlock Text="{Binding TotalQuantity, Converter={StaticResource QuantityDisplayConverter}}"
           Margin="0,5,0,5"
           Visibility="{Binding DataContext.ShowOrderButtons, 
                        RelativeSource={RelativeSource AncestorType=Window}, 
                        Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <!-- Subitems for Menus -->
                    <ItemsControl ItemsSource="{Binding SubItems}" Margin="10,20,0,0"
                                  Visibility="{Binding IsMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="1" BorderBrush="Gray" Padding="5" Margin="0,5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
                                        <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" />
                                        <TextBlock Text="{Binding Allergens}" FontStyle="Italic" Foreground="DarkRed"/>
                                        <TextBlock Text="{Binding TotalQuantity, Converter={StaticResource QuantityDisplayConverter}}"
           Margin="0,5,0,0"
           Visibility="{Binding DataContext.ShowOrderButtons, 
                        RelativeSource={RelativeSource AncestorType=Window}, 
                        Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Add to Order Button -->
            <Button Grid.Row="1" Content="Add to Order"
                    Command="{Binding AddToOrderCommand}"
                    Visibility="{Binding ShowOrderButtons, Converter={StaticResource BoolToVisibilityConverter}}"
                    Height="30" Margin="0,10,0,0"/>
        </Grid>

        <!-- Selected items and total -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3" Orientation="Vertical" Margin="10" VerticalAlignment="Bottom"
                    Visibility="{Binding ShowOrderButtons, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Selected Items:" FontWeight="Bold" FontSize="14" Margin="0,10,0,5"/>

            <ItemsControl ItemsSource="{Binding SelectedItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Quantity}" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text=" x " FontWeight="Bold"/>
                                <TextBlock Text="{Binding Item.Name}" Margin="5,0"/>
                                <TextBlock Text="{Binding TotalPrice, StringFormat= - {0:C}}" Margin="10,0,0,0"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Item.DiscountApplied, StringFormat=Discount: {0}%}"
                                       Foreground="Green"
                                       Visibility="{Binding Item.DiscountApplied, Converter={StaticResource NullToVisibilityConverter}}"
                                       Margin="20,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock Text="{Binding TotalPrice, StringFormat=Total: {0:C}}"
                       FontWeight="Bold" FontSize="16" Margin="0,10,0,0"/>
            <Button Content="Place Order"
                    Height="30"
                    Command="{Binding PlaceOrderCommand}"
                    Width="136"/>
        </StackPanel>
    </Grid>
</Window>
