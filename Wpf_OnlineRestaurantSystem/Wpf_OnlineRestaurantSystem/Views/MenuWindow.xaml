<Window x:Class="Wpf_OnlineRestaurantSystem.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_OnlineRestaurantSystem.Converters"
        mc:Ignorable="d"
        Title="MenuWindow" Height="500" Width="900">
    
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Categories -->
        <ComboBox 
            Grid.Column="0"
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
            DisplayMemberPath="Name"
            Margin="10" />

        <!-- Menu Items in Selected Category -->
        <ListBox Grid.Column="1"
                 ItemsSource="{Binding MenuItems}" 
                 SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                 DisplayMemberPath="Name"
                 Margin="10"/>

        <!-- Selected Item Details -->
        <StackPanel Grid.Column="2" Margin="10" DataContext="{Binding SelectedItem}">
            <TextBlock Text="Detalii:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,5"/>
            <TextBlock Text="Preț:" FontWeight="SemiBold"/>
            <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" Margin="0,0,0,5"/>
            <TextBlock Text="Alergeni:" FontWeight="SemiBold" Visibility="{Binding Allergens, Converter={StaticResource NullToVisibilityConverter}}"/>
            <TextBlock Text="{Binding Allergens}" TextWrapping="Wrap"/>

            <!-- Subitems for Menus -->
            <ItemsControl ItemsSource="{Binding SubItems}" Margin="10,20,0,0"
                          Visibility="{Binding IsMenu, Converter={StaticResource BoolToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Gray" Padding="5" Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Description}" FontStyle="Italic"/>
                                <TextBlock Text="{Binding Price, StringFormat={}{0:C}}" />
                                <TextBlock Text="{Binding Allergens}" FontStyle="Italic" Foreground="DarkRed"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
