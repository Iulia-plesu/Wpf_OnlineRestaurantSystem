<Window x:Class="Wpf_OnlineRestaurantSystem.Views.DishDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_OnlineRestaurantSystem.ViewModels"
        mc:Ignorable="d"
        Title="Dish Details" Height="500" Width="400"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Name:</Label>
        <TextBox Grid.Row="1" Text="{Binding Dish.Name, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2">Current Quantity:</Label>
        <TextBox Grid.Row="3" Text="{Binding Dish.CurrentQuantity, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="4">Unit:</Label>
        <TextBox Grid.Row="5" Text="{Binding Dish.Unit, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="6">Quantity Per Portion:</Label>
        <TextBox Grid.Row="7" Text="{Binding Dish.QuantityPerPortion, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="8">Description:</Label>
        <TextBox Grid.Row="9" Text="{Binding Dish.Description, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="10">Allergens:</Label>
        <ListBox Grid.Row="11" ItemsSource="{Binding AllAllergens}" SelectionMode="Multiple"
                 Height="120" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0"
        Click="SaveButton_Click" IsDefault="True"/>

            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>